<div class="row" style="color:white">
  <div class="col-md-6 col-md-offset-3">
<%= form_with(model: game, local: true) do |form| %>
  <% if game.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(game.errors.count, "error") %> prohibited this game from being saved:</h2>

      <ul>
      <% game.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title, id: :game_title, class: 'form-control' %>
  </div>
  
  <% if current_user.admin %>
    <div class="field">
      <%= form.label :featured %>
      <%= form.check_box :featured %>
    </div>
    <% end %>

    <div class="field">
      <%= form.label :description %>
      <%= form.text_area :description, id: :game_description, class: 'form-control' %>
    </div>

  
  <div class="field">
    <%= form.label :cover_url %>
    <%= form.text_field :cover_url, id: :game_cover_url, class: 'form-control' %>
  </div>
  
  <div class="field">
    <%= form.label :year %>
    <%= form.text_field :year, id: :game_year, class: 'form-control' %>
  </div>
  
  <div class="field">
    <%= form.label "Gameplay" %>
    <%= form.select :gameplay, raw("<option selected='selected'>FPS</option><option>RPG</option><option>Third Person</option><option>Simulation</option><option>Fighting Game</option><option>Puzzle</option><option>Other</option>"), class: 'form-control' %>
  </div>
  
  <div class="field">
    <%= form.label "Genre" %>
    <%= form.select :genre, 
    raw("<option selected='selected'>Sports</option><option>SciFi</option><option>History</option><option>Fantasy</option><option>Other</option><option>Adventure</option>") %>
  </div>
  
  <div class="field">
    <%= form.label :developer %>
    <%= form.text_field :developer, id: :game_developer, class: 'form-control' %>
  </div>
  
  <div class="field">
    <%= form.label :publisher %>
    <%= form.text_field :publisher, id: :game_publisher, class: 'form-control' %>
  </div>
  
  <div class="field">
    <%= form.label :platforms %>
    <%= form.text_field :platforms, id: :game_platforms, class: 'form-control' %>
  </div>

  <div class="field">
    <%= form.label :esrb %>
    <%= form.text_field :esrb, id: :game_esrb, class: 'form-control' %>
  </div>
<div>&nbsp;</div>
  <div class="actions">
      <%= form.submit 'Submit', class: "btn btn-primary"  %>
  </div>
<% end %>
</div>
</div>
<div>&nbsp;</div>