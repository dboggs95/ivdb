<div class="card">
	<div class="card-header">
		<h3>Leave a Review</h3>
	</div>
	<div class="card-text" style="padding: 10px">
	  <div class="row">
      <div class="col-md-6 col-md-offset-3">
        
         <%= form_with(model: [ @game, @game.reviews.build ], local: true) do |form| %>
        <% game = @game %>
        <% if game.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(game.errors.count, "error") %> prohibited this game from being saved:</h2>
      
            <ul>
            <% game.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>
        
  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title, id: :title, class: 'form-control' %>
  </div>
  
  <div class="field">
    <%= form.label :rating %>
    <%= form.select :rating, (0..10), class: 'form-control' %>
  </div>

  <div class="field">
    <%= form.label :body %>
    <%= form.text_area :body, id: :body, class: 'form-control' %>
  </div>
  
   <div class="field">
     <% if !current_user.nil? %>
    <%= form.number_field :user_id, :type => "hidden", :value => "#{current_user.id}" %>
    <% end %>
  </div>

  <div class="actions">
    <%= form.submit 'Create Review', class: "btn btn-primary" %>
  </div>
<% end %>
</div>
</div>
</div>
</div>
