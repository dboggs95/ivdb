
<% provide(:title, 'About') %>
<div class="container">
	<div class="row">
		<div class="col-sm-12">
			<h2>About</h2>
			<hr/>
		</div>
	</div>
	<div class="row">
		<div class="col-sm-12">
<div id="myCarousel" class="carousel slide" data-ride="carousel">
<!-- Indicators -->
<ol class="carousel-indicators">
<li data-target="#myCarousel" data-slide-to="0" class="active"></li>
<li data-target="#myCarousel" data-slide-to="1"></li>
<li data-target="#myCarousel" data-slide-to="2"></li>
</ol>
<!-- Wrapper for slides -->
<div class="carousel-inner">
<div class="carousel-item active">
<%= image_tag("videogame.jpg", :alt => "img3") %>
  <div class="carousel-caption">
    <h3> This is our site</h3>
    <p>Designed to help gamers develop a database of their favorite games.</p>
  </div>
</div>
<div class="carousel-item">
<%= image_tag("videogamecharacters.png", :alt => "img2") %>
  <div class="carousel-caption">
    <h3 style="color: black">Create an account and search the database.</h3>
  </div>
</div>
<div class="carousel-item">
<%= image_tag("videogames.png", :alt => "img3") %>
  <div class="carousel-caption">
    <h3>Interact</h3>
    <p>Let others know what you are playing.</p>
  </div>
</div>
</div>
<!-- Left and right controls -->
<a class="carousel-control-prev" href="#myCarousel" data-slide="prev">
<span class="carousel-control-prev-icon"></span>
</a>
<a class="carousel-control-next" href="#myCarousel" data-slide="next">
<span class="carousel-control-next-icon"></span>
</a>
</div>
		</div>
	</div>
</div>
