<!DOCTYPE html>
<html>
	<head>
		<title><%= yield(:title) %> - iVDB</title>
		<%= csrf_meta_tags %>
		<%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
		<%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
	</head>
	<body background="https://i.pinimg.com/originals/a5/cb/ae/a5cbaec22233c93ce11843cb599e3ee0.jpg">
		<header class="header">
			<nav class="navbar">
				<div class="container">
					<div class="col-sm-3">
						<ul class="navbar-nav">
							<li class="navbar-brand">
								<%= image_tag("logo.png", :alt => "logo", :class => "logo rounded") %>
							</li>
						</ul>
					</div>
					<div class="col-sm-9">
						<%= render :template => "search/index" %>
					</div>
				</div>
			</nav>
			<nav class="navbar navbar-expand-sm bg-dark navbar-dark">
				<div class="container">
				  <ul class="navbar-nav mr-auto">
				    <li class="nav-item"><%= link_to "Home", home_index_path, class: 'nav-link' %></li>
					<li class="nav-item"><%= link_to "Browse", games_path, class: 'nav-link' %></li>
					<li class="nav-item"><%= link_to "Help", home_help_path, class: 'nav-link' %></li>
				  </ul>
				<% if signed_in? %>
				  <ul class="navbar-nav">
				  	<li class="nav-item">
						<%= link_to current_user, class: 'nav-link' do %>
							<i class="fa fa-user" aria-hidden="true"></i> View Profile
						<% end %>
					</li>
					<li class="nav-item">
						<%= link_to edit_user_path(current_user), class: 'nav-link' do %>
							<i class="fa fa-cogs" aria-hidden="true"></i> Edit Profile
						<% end %>
					</li>
				    <li class="nav-item">
						<%= link_to '/signout', class: 'nav-link' do %>
							<i class="fa fa-sign-out" aria-hidden="true"></i> Sign out
						<% end %>
					</li>
              	  </ul>
              	  <% else %>
				  <ul class="navbar-nav">
				    <li class="nav-item">
						<%= link_to '/signup', class: 'nav-link' do %>
							<i class="fa fa-user-plus" aria-hidden="true"></i> Sign up
						<% end %>
					</li>
					<li class="nav-item">
						<%= link_to '/signin', class: 'nav-link' do %>
							<i class="fa fa-sign-in" aria-hidden="true"></i> Sign in
						<% end %>
					</li>
				  </ul>
				  <% end %>
			  	</div>
			</nav>
		</header>
		<div class="container-fluid">
			<div class="container">
				<%= yield %>
			</div>
		</div>
		
	<div class="container">
      <br><br><br><br><br><br>
      <% flash.each do |message_type, message| %>
	        <div class= "alert alert-<%= message_type %>"><%=message %></div>
	    <% end %>
	    <%flash.clear%>
 
    </div>
		
		<footer class="footer">
			<nav class="navbar navbar-expand-sm bg-dark navbar-dark">
				<div class="container">
					<span class="navbar-left navbar-text mr-auto">Internet Video Game Database</span>
					<ul class="navbar-nav">
						<li class="nav-item"><%= link_to "About", home_about_path, class: 'nav-link' %></li>
						<li class="nav-item"><%= link_to "Contact", home_contact_path, class: 'nav-link' %></li>
					</ul>
				</div>
			</nav>
		</footer>
	</body>
</html>